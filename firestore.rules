rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Profiles ---
    match /users/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "blagridigital@gmail.com");
      allow list: if request.auth != null && request.auth.token.email == "blagridigital@gmail.com";
      allow create: if request.auth != null && request.resource.data.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.uid == resource.data.uid;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // --- Wallets ---
    match /wallets/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "blagridigital@gmail.com");
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow list, delete: if false;
    }
    
    // --- AkiliPoints & RewardHistory ---
    match /akiliPoints/{userId} {
       allow get: if request.auth != null; // Public to see levels
       allow update, create: if request.auth != null && request.auth.uid == userId;
       allow list, delete: if false;
    }
    match /rewardHistory/{historyId} {
       allow get, list: if request.auth != null && request.auth.uid == resource.data.userId;
       allow create, update, delete: if false; // Server-only
    }
    match /rewardCatalog/{rewardId} {
        allow get, list: if request.auth != null; // Public to see rewards
        allow create, update, delete: if false; // Admin-only
    }

    // --- Posts ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
    
    // --- Transactions ---
    match /transactions/{txId} {
      allow get, list: if request.auth != null && 
        (resource.data.uid == request.auth.uid || request.auth.token.email == "blagridigital@gmail.com");
      allow create: if request.auth != null && 
        (request.resource.data.uid == request.auth.uid || !('uid' in request.resource.data));
      allow update, delete: if false;
    }

    // --- Plans ---
    match /plans/{planId} {
      allow read: if true;
      allow write: if false;
    }
    
    // --- Admin Agents ---
    match /adminAgents/{agentId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.token.email == "blagridigital@gmail.com";
    }

    // --- User Agents ---
    match /users/{userId}/agents/{agentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Calls ---
    match /calls/{callId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.callerId;
    }
    
    // --- Admin Settings & Commissions ---
    match /adminSettings/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "blagridigital@gmail.com";
    }
    match /commissionRates/{docId} {
      allow read: if true; // Functions need read access
      allow write: if request.auth != null && request.auth.token.email == "blagridigital@gmail.com";
    }
    
    // --- Marketplace, Escrow & Trust ---
    match /products/{productId} {
        allow read: if true;
        allow create, update: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
        allow delete: if false;
    }
     match /productVerification/{verificationId} {
        allow read: if true;
        allow write: if false; // Server-only
    }
    match /orders/{orderId} {
        allow read: if request.auth != null && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
        allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
        allow update: if request.auth != null && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
        allow delete: if false;
    }
     match /escrow/{escrowId} {
        allow read: if request.auth != null && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
        allow create, update: if false; // Server-only
    }
     match /deliveryProofs/{proofId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uploaderId;
        allow update, delete: if false;
    }
    match /trustScores/{sellerId} {
        allow get: if true;
        allow list, write: if false; // Server-only
    }
     match /buyerTrust/{buyerId} {
        allow get: if true;
        allow list, write: if false; // Server-only
    }
    
    // Default deny all other paths
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
