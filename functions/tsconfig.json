{
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "node16",
      "moduleResolution": "node16",
      "target": "es2020",
      "outDir": "lib",
      "rootDir": "src",
      "esModuleInterop": true,
      "strict": true,
      "isolatedModules": false,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["src"]
  }
  