rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // üîê Helper functions
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ---------------------------
    // üë§ USERS collection
    // ---------------------------
    match /users/{userId} {
      allow create, get, update, delete: if isOwner(userId);
      allow list: if false;
    }

    // ---------------------------
    // ü§ñ Clones & Agents (subcollections)
    // ---------------------------
    match /users/{userId}/{subCollection=clones|agents}/{docId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    // ---------------------------
    // üì∞ POSTS (public read)
    // ---------------------------
    match /posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // üõç PRODUCTS (public read)
    // ---------------------------
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // üíé TRUST SCORE (buyerTrust)
    // ---------------------------
    match /buyerTrust/{buyerId} {
      allow get: if isOwner(buyerId);
      allow list, create, update, delete: if false;
    }

    // ---------------------------
    // üß© ADMIN AGENTS (fix 403)
    // ---------------------------
    match /adminAgents/{agentId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn(); // Added explicit list access
      allow create, update, delete: if false;
    }

    // ---------------------------
    // üí≥ Other public collections
    // ---------------------------
    match /plans/{planId} {
      allow get, list: if true;
    }
    match /payments/{paymentId} {
      allow get, list: if isSignedIn();
    }
    match /transactions/{txId} {
      allow get, list: if isSignedIn();
    }
    match /orders/{orderId} {
      allow get, list: if isSignedIn();
    }
    
    // Followers & Notifications
    match /followers/{followId} {
      allow get, list: if request.auth != null;
      allow create, delete: if request.auth != null;
    }
    match /notifications/{notifId} {
      allow get, list: if request.auth != null && request.query.where[0].field == 'uid' && request.query.where[0].value == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update: if request.auth != null && resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    // ---------------------------
    // üö´ Deny everything else
    // ---------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
