
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "blagridigital@gmail.com";
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users: Logged-in users can read anyone's profile.
    // Users can only write to their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin Settings: Only accessible by admin
    match /adminSettings/{docId} {
        allow read, write: if isAdmin();
    }

    // Admin Agents: Public can read, only admin can write
    match /adminAgents/{agentId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // User Agents: Logged-in users can read/write their own agents
     match /users/{userId}/agents/{agentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Calls: Only the caller can read/write their call documents
    match /calls/{callId} {
        allow read, write: if request.auth != null && request.resource.data.callerId == request.auth.uid;
    }
    
    // Transactions: Users can only read/write their own transactions
    match /transactions/{txId} {
      allow read, write: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Other public or semi-public collections
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.authorId == request.auth.uid;
    }
    
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }

    match /plans/{planId} {
      allow read: if true;
    }

  }
}
