rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthed() { return request.auth != null; }

    // Public read of posted media; writes only by owner
    match /posts/{uid}/{postId}/{fileName} {
      allow read: if true;
      allow write: if isAuthed() && request.auth.uid == uid;
    }

    // User avatars & clones
    match /users/{uid}/avatars/{fileName} {
      allow read: if true;
      allow write: if isAuthed() && request.auth.uid == uid;
    }
    match /clones/{uid}/{cloneId}/{fileName} {
      allow read: if isAuthed(); // restrict by auth
      allow write: if isAuthed() && request.auth.uid == uid;
    }

    // Products
    match /products/{productId}/{fileName} {
      allow read: if true;
      allow write: if isAuthed();
    }
  }
}
