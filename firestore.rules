/**
 * @fileoverview Firestore Security Rules for AkiliPesa.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure user-owned data access with additional admin roles.
 * Users can only read and write their own data, while admins have broader access to administrative collections.
 * Public read access is granted to some collections (e.g., `/plans`) but write access is restricted.
 *
 * Data Structure:
 * - User-specific data is nested under `/users/{userId}`.
 * - Public data (e.g., `/posts`, `/products`, `/plans`) resides at the top level.
 * - Administrative data resides under `/adminAgents` and `/adminSettings`.
 *
 * Key Security Decisions:
 * - Strict user ownership is enforced for all user subcollections and documents using the `isOwner()` function.
 * - Admin-only access is granted for the `/adminAgents` and `/adminSettings` collections.  A future state of the application should grant admin access by a role field under users.
 * - Public read access is enabled for `/posts`, `/products` and `/plans` collections to facilitate discovery, but writes are controlled.
 * - Listing of user documents is allowed only to the user to support client-side data management, except where explicitly denied.
 *
 * Denormalization for Authorization:
 * - The rules assume that documents requiring ownership checks contain an `ownerId` or `authorId` field that matches the authenticated user's `uid`.
 * - For shared access patterns (not currently implemented), the shared document should contain an array of member UIDs (`participantIds`) or a map of UIDs to roles (`members`).
 *
 * Structural Segregation:
 * - Public and private data is segregated into separate collections (e.g., public `/posts` vs. private `/users/{userId}/clones`).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants users access to their own profile data.
     * @path /users/{userId}
     * @allow (get, list) if request.auth.uid == userId
     * @allow (create) if request.auth.uid == userId
     * @allow (update, delete) if request.auth.uid == userId && resource != null
     * @deny (get, list) if request.auth.uid != userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes. Restricts access to a user's own data tree.
     */
    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    /**
     * @description Allows anyone to read all posts, but enforces owner-only writes.
     * @path /posts/{postId}
     * @allow (get, list) if true
     * @allow (create) if request.resource.data.authorId == request.auth.uid
     * @allow (update, delete) if resource.data.authorId == request.auth.uid && resource != null
     * @deny (create) if request.resource.data.authorId != request.auth.uid
     * @deny (update, delete) if resource.data.authorId != request.auth.uid
     * @principle Public read with owner-only writes
     */
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    /**
     * @description Grants users access to their own clones.
     * @path /users/{userId}/clones/{cloneId}
     * @allow (get, list) if request.auth.uid == userId
     * @allow (create) if request.auth.uid == userId
     * @allow (update, delete) if request.auth.uid == userId && resource != null
     * @deny (get, list) if request.auth.uid != userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes. Restricts access to a user's own data tree.
     */
    match /users/{userId}/clones/{cloneId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

     /**
      * @description Grants users access to their own agents.
      * @path /users/{userId}/agents/{agentId}
      * @allow (get, list) if request.auth.uid == userId
      * @allow (create) if request.auth.uid == userId
      * @allow (update, delete) if request.auth.uid == userId && resource != null
      * @deny (get, list) if request.auth.uid != userId
      * @deny (create) if request.auth.uid != userId
      * @deny (update, delete) if request.auth.uid != userId
      * @principle Enforces document ownership for writes. Restricts access to a user's own data tree.
      */
    match /users/{userId}/agents/{agentId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    /**
     * @description Allows anyone to read all products, but enforces owner-only writes.
     * @path /products/{productId}
     * @allow (get, list) if true
     * @allow (create) if request.resource.data.ownerId == request.auth.uid
     * @allow (update, delete) if resource.data.ownerId == request.auth.uid && resource != null
     * @deny (create) if request.resource.data.ownerId != request.auth.uid
     * @deny (update, delete) if resource.data.ownerId != request.auth.uid
     * @principle Public read with owner-only writes
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth.uid == resource.data.ownerId;
    }

    /**
     * @description Allows anyone to read order information, but enforces owner-only writes.
     * @path /orders/{orderId}
     * @allow (get, list) if true
     * @allow create: if request.auth.uid == request.resource.data.buyerId;
     * @allow update: if request.resource.data.sellerId == request.auth.uid && resource != null;
     * @allow delete: if false; // No deletes allowed on order collection.
     * @deny create: if request.auth.uid != request.resource.data.buyerId;
     * @deny update: if request.resource.data.sellerId != request.auth.uid;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Public read with owner-only writes
     */
    match /orders/{orderId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.buyerId;
      allow update: if request.auth.uid == resource.data.sellerId;
      allow delete: if false; // No deletes allowed on order collection.
    }

    /**
     * @description Allows anyone to read payment information, but enforces owner-only writes.
     * @path /payments/{paymentId}
     * @allow (get, list) if true
     * @allow create: if request.auth.uid == request.resource.data.sellerId;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny create: if request.auth.uid != request.resource.data.sellerId;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Public read with owner-only writes
     */
    match /payments/{paymentId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.sellerId;
      allow update: if false; // No updates allowed on payments collection.
      allow delete: if false; // No deletes allowed on payments collection.
    }

     /**
      * @description Allows anyone to read all plans, but restricts writes.
      * @path /plans/{planId}
      * @allow (get, list) if true
      * @allow create, update, delete: if false; // TODO: Add admin-only validation with role field under users.
      * @deny create, update, delete: if true;
      * @principle Public read, admin-only writes (enforced with `false` for now)
      */
    match /plans/{planId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin-only validation with role field under users.
    }

    /**
     * @description Allows anyone to read call information, but enforces owner-only writes.
     * @path /calls/{callId}
     * @allow (get, list) if true
     * @allow create: if request.auth.uid == request.resource.data.userId;
     * @allow update: if request.resource.data.userId == request.auth.uid && resource != null;
     * @allow delete: if false;
     * @deny create: if request.auth.uid != request.resource.data.userId;
     * @deny update: if request.auth.uid != request.resource.data.userId;
     * @principle Public read with owner-only writes
     */
    match /calls/{callId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read transactions but only the owner can create them. No updates or deletes allowed.
     * @path /transactions/{txId}
     * @allow get, list: if true;
     * @allow create: if request.auth.uid == request.resource.data.uid;
     * @allow update, delete: if false;
     * @deny create: if request.auth.uid != request.resource.data.uid;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Public read with owner-only writes
     */
    match /transactions/{txId} {
        allow get, list: if true;
        allow create: if request.auth.uid == request.resource.data.uid;
        allow update, delete: if false;
    }

    /**
     * @description Restricts access to admin agents to authenticated users.
     * @path /adminAgents/{agentId}
     * @allow get, list, create, update, delete: if false; // TODO: Add admin-only validation with role field under users.
     * @deny get, list, create, update, delete: if true;
     * @principle Admin-only access
     */
    match /adminAgents/{agentId} {
      allow get, list, create, update, delete: if false; // TODO: Add admin-only validation with role field under users.
    }

    /**
     * @description Restricts access to admin settings to authenticated users.
     * @path /adminSettings
     * @allow get, list, create, update, delete: if false; // TODO: Add admin-only validation with role field under users.
     * @deny get, list, create, update, delete: if true;
     * @principle Admin-only access
     */
    match /adminSettings {
      allow get, list, create, update, delete: if false; // TODO: Add admin-only validation with role field under users.
    }


    // ---- Helper functions ----

    /**
     * @description Checks if the current user is the owner of the resource.
     * @param {string} userId The user ID to check against.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Checks if the current user is the owner of the resource and the resource exists.
     * @param {string} userId The user ID to check against.
     * @return {bool} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }
  }
}