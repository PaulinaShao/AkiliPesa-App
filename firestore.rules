rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────
    // UTILITY FUNCTIONS
    // ─────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.role == 'admin' || request.auth.token.admin == true);
    }
    
    function isAgent() {
      return isSignedIn() && request.auth.token.role == 'agent';
    }

    // ─────────────────────────────
    // USER & AGENT DATA
    // ─────────────────────────────
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /agentAvailability/{agentId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
    }

    match /agentPricing/{agentId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
    }

    // ─────────────────────────────
    // REVIEWS & BOOKINGS
    // ─────────────────────────────
    match /agentReviews/{agentId}/reviews/{reviewId} {
      allow read, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    match /agentBookings/{agentId}/requests/{requestId} {
      allow read: if isOwner(agentId) || isOwner(resource.data.userId);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow owner or admin to update status
      allow update: if (isOwner(agentId) || isAdmin()) && !("userId" in request.resource.data); 
      allow delete: if isAdmin();
    }

    // ─────────────────────────────
    // REAL-TIME CALLING
    // ─────────────────────────────
    match /callRooms/{callId} {
      function isParticipant(uid) {
        return uid in resource.data.participants;
      }
      
      allow read: if isSignedIn() && isParticipant(request.auth.uid);
      allow create: if false; // Only backend
      // Allow host to change layout, participants to change their own state
      allow update: if isSignedIn() && (
        (isOwner(resource.data.hostId) && !("participants" in request.resource.data)) || // Host updates layout
        (isParticipant(request.auth.uid) && request.resource.data.participants[request.auth.uid] == resource.data.participants[request.auth.uid]) // Participant updates self
      );
      allow delete: if isOwner(resource.data.hostId) || isAdmin();
    }
    
    match /callInvites/{inviteId} {
      allow read, write: if isSignedIn(); // Simplified for now
    }

    // ─────────────────────────────
    // FINANCIAL & EARNINGS SYSTEM
    // ─────────────────────────────
    match /wallets/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if false; // Backend only
    }

    match /transactions/{txId} {
       allow read: if isAdmin() || (isSignedIn() && request.auth.uid in resource.data.participants);
       allow create, update, delete: if false; // Backend only
    }

    // ─────────────────────────────
    // ALL OTHER COLLECTIONS (PREVIOUSLY DEFINED)
    // ─────────────────────────────
    match /ai_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read: if isSignedIn() && request.auth.uid == resource.data.uid;
    }
    
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId);
    }
    
    match /notifications/{nid} {
      allow read, write: if isOwner(resource.data.userId) || isAdmin();
    }
    
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
