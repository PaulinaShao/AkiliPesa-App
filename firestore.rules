rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // üîê Helper functions
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ---------------------------
    // üë§ USERS collection
    // ---------------------------
    match /users/{userId} {
      allow create, get, update, delete: if isOwner(userId);
      allow list: if false;
    }

    // ---------------------------
    // ü§ñ CLONES subcollection
    // ---------------------------
    match /users/{userId}/clones/{cloneId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    // ---------------------------
    // üë• AGENTS subcollection
    // ---------------------------
    match /users/{userId}/agents/{agentId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    // ---------------------------
    // üì∞ POSTS (public read)
    // ---------------------------
    match /posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // üõç PRODUCTS (public read)
    // ---------------------------
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // üíé TRUST SCORE (buyerTrust)
    // ---------------------------
    match /buyerTrust/{buyerId} {
      allow get: if isOwner(buyerId);
      allow list, create, update, delete: if false;
    }

    // ---------------------------
    // üß© ADMIN AGENTS (fixed 403)
    // ---------------------------
    match /adminAgents/{agentId} {
      // Allow both Google & phone users to read or list
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create, update, delete: if false;
    }

    // ---------------------------
    // üí≥ WALLETS (user-only)
    // ---------------------------
    match /wallets/{walletId} {
      allow get, list, create, update, delete: if isOwner(walletId);
    }

    // ---------------------------
    // üí∞ TRANSACTIONS / PAYMENTS / ORDERS / PLANS
    // ---------------------------
    match /transactions/{txId} {
      allow get, list, create: if isSignedIn();
    }

    match /payments/{paymentId} {
      allow get, list, create: if isSignedIn();
    }

    match /orders/{orderId} {
      allow get, list, create: if isSignedIn();
    }

    match /plans/{planId} {
      allow get, list: if true;
    }

    // ---------------------------
    // üë• Followers & Notifications
    // ---------------------------
    match /followers/{followId} {
      allow get, list: if isSignedIn();
      allow create, delete: if isSignedIn();
    }

    match /notifications/{notifId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;
    }

    // ---------------------------
    // üö´ Deny everything else
    // ---------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
