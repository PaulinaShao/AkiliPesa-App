
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- Admin-Only Collections ---
    match /adminSettings/{docId} {
      allow read: if request.auth != null; // All users can read settings
      allow write: if request.auth.token.email == "blagridigital@gmail.com";
    }

    match /revenueReports/{docId} {
      allow read, write: if request.auth.token.email == "blagridigital@gmail.com";
    }
    
    match /mediaReports/{docId} {
        allow read, write: if request.auth.token.email == "blagridigital@gmail.com";
    }
    
    match /buyerHistory/{docId} {
         allow read, write: if request.auth.token.email == "blagridigital@gmail.com";
    }

    match /trustHistory/{docId} {
         allow read, write: if request.auth.token.email == "blagridigital@gmail.com";
    }

    // --- User-Specific Data ---
    match /users/{userId} {
      allow get: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow list, delete: if false;
    }
    
    match /wallets/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
      allow list, delete, create, update: if false; // Managed by backend functions
    }
    
    match /akiliPoints/{userId} {
       allow get: if request.auth != null && request.auth.uid == userId;
       allow list, delete, create, update: if false; // Managed by backend functions
    }
    
    match /buyerTrust/{userId} {
       allow get: if request.auth != null && request.auth.uid == userId;
       allow list, delete, create, update: if false; // Managed by backend functions
    }

    match /trustScores/{userId} {
       allow get: if request.auth != null && request.auth.uid == userId;
       allow list, delete, create, update: if false; // Managed by backend functions
    }
    
    match /rewardHistory/{docId} {
        allow read: if request.auth != null && resource.data.userId == request.auth.uid;
        allow list, write: if false; // Managed by backend functions
    }

    // --- Public & Semi-Public Data ---
    match /posts/{postId} {
      allow read: if true;
      allow create, update: if request.auth.uid == request.resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId;
    }
    
    match /products/{productId} {
      allow read: if true;
      allow create, update: if request.auth.uid == request.resource.data.ownerId;
      allow delete: if request.auth.uid == resource.data.ownerId;
    }
    
    match /productVerification/{docId} {
        allow read: if request.auth != null; // Any signed in user can see verification status
        allow list, write: if false; // Managed by backend functions
    }
    
    match /plans/{planId} {
      allow read: if true;
      allow write: if request.auth.token.email == "blagridigital@gmail.com";
    }

    match /rewardCatalog/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.email == "blagridigital@gmail.com";
    }

    // --- Transactional & Relational Data ---
    match /orders/{orderId} {
        allow get: if request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId;
        allow list: if false; // No public listing of all orders
        allow create: if request.auth.uid == request.resource.data.buyerId;
        allow update: if request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId;
        allow delete: if false;
    }

    match /deliveryProofs/{proofId} {
        allow read: if request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId;
        allow create: if request.auth.uid == request.resource.data.sellerId;
        allow update: if false;
        allow delete: if false;
    }

    match /feedback/{feedbackId} {
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.buyerId;
        allow update, delete: if false;
    }
    
    match /escrow/{escrowId} {
      allow get: if request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId;
      allow write: if false; // Managed by backend functions
    }
    
    match /referrals/{refId} {
        allow read: if request.auth.uid == resource.data.uid || request.auth.uid == resource.data.sharedBy;
        allow write: if false; // Managed by backend functions
    }

    match /transactions/{txId} {
      // READ: User can list their own transactions, Admin can list all.
      allow get, list: if request.auth != null && 
        (resource.data.uid == request.auth.uid || request.auth.token.email == "blagridigital@gmail.com");
    
      // CREATE: Allow a client to create a transaction if the UID matches or if UID is omitted (to be patched by backend).
      allow create: if request.auth != null && 
        (request.resource.data.uid == request.auth.uid || !('uid' in request.resource.data));
    
      // UPDATE, DELETE: Disallowed on the client for data integrity.
      allow update, delete: if false;
    }
    
    match /adminAgents/{agentId} {
        allow get, list: if request.auth != null; // Any authenticated user can see the list of admin agents
        allow write: if request.auth.token.email == "blagridigital@gmail.com";
    }

    // --- Session & Call Management ---
    match /calls/{callId} {
      allow get, update: if request.auth.uid == resource.data.callerId;
      allow create: if request.auth.uid == request.resource.data.callerId;
      allow list, delete: if false;
    }
    
    match /aiSessions/{sessionId} {
      // Session ID is typically the user's UID for 1-to-1 session management
      allow read, write: if request.auth != null && request.auth.uid == sessionId;
    }
  }
}
