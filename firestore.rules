
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.email == "blagridigital@gmail.com";
    }

    // AUTHENTICATION
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }
    
    // ADMIN
    match /adminAgents/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /adminSettings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /aiSessions/{uid} {
      allow read, update, delete: if isAdmin();
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // POSTS
    match /posts/{postId} {
      allow read: if resource.data.visibility == 'public';
      allow write: if request.auth.uid == request.resource.data.authorId;
    }
    
    // USER-SPECIFIC
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // PRODUCTS
    match /products/{productId} {
        allow read: if true;
        allow write: if request.auth.uid == request.resource.data.ownerId;
    }
    
    // ORDERS & PAYMENTS
    match /orders/{orderId} {
        allow read: if request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId;
        allow create: if request.auth.uid == request.resource.data.buyerId;
        allow update: if request.auth.uid == resource.data.sellerId; // Seller updates status
    }
    
    match /payments/{paymentId} {
        allow read: if request.auth.uid == resource.data.sellerId || isAdmin();
        // Payments are created by backend functions, not clients
        allow write: if false;
    }
    
     match /wallets/{agentId} {
      // Only backend can update wallets for now
      allow read, write: if false; 
    }

  }
}
