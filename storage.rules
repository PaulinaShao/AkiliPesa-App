
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Outputs are readable by the user who owns them.
    // Writes should only come from Cloud Functions, which bypass these rules.
    match /ai-outputs/{uid}/{requestId}/{fileName} {
      allow read: if isOwner(uid);
      allow write: if false;
    }
    
    // Log files are private.
    match /logs/{allPaths=**} {
      allow read, write: if false;
    }
    
    // Default deny all other paths.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
