
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────
    // UTILITY FUNCTIONS
    // ─────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isFunction() {
      // In a real environment, you might check for a specific claim.
      // For now, we assume any server-side authenticated request is from a function.
      return request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    // ─────────────────────────────
    // USER DATA RULES
    // ─────────────────────────────
    
    // Users can read/write their own profile.
    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }
    
    // Users can read their own wallet.
    // Client cannot set balance above the existing balance.
    match /wallet/{uid} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && request.resource.data.balance <= resource.data.balance;
    }

    // Users can read their own transactions.
    match /transactions/{txId} {
      allow read: if isOwner(resource.data.uid);
      allow create, update, delete: if false;
    }
    
    // Users can create requests and read their own.
    match /ai_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read: if isOwner(resource.data.uid);
      // Updates should only be from backend functions (e.g. status, output_url)
      allow update: if false; 
    }
    
    // Users can read/write their own memory context.
    match /memory_context/{uid} {
      allow read, write: if isOwner(uid);
    }

    // ─────────────────────────────
    // SERVER-ONLY RULES
    // ─────────────────────────────

    // Vendor metrics are written and read by backend functions only.
    match /vendor_metrics/{vendorName} {
      allow read, write: if false; // Assume functions access with admin privileges
    }
    
    // Profit tracking is written by backend functions only.
    match /profit_tracking/{transactionId} {
      allow read, write: if false; // Assume functions access with admin privileges
    }
    
    // ─────────────────────────────
    // GLOBAL DEFAULT (DENY)
    // ─────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
