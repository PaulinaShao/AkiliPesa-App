/**
 * @file Firestore Security Rules
 * @version 2
 *
 * @description
 * This ruleset enforces a strict user-ownership model for personal data while allowing public read access to certain collections.
 *
 * Data Structure:
 * - User profiles and associated data (clones, agents) are nested under `/users/{userId}`.
 * - Public content (posts, products) resides in top-level collections like `/posts/{postId}` and `/products/{productId}`.
 * - Orders, Payments, Transactions, Calls, Plans, AdminAgents, and AdminSettings are stored in separate top-level collections.
 *
 * Key Security Decisions:
 * - User profiles and associated data are strictly controlled by the owning user.
 * - Public content collections allow read access to all users but restrict write access to the owner.
 * - The rules do NOT enforce the complete schema for rapid prototyping, focusing instead on authorization.
 * - Listing user profiles is disallowed for privacy.
 *
 * Denormalization for Authorization:
 * - The rules rely on the `request.auth.uid` to verify user identity and ownership.
 * - Public read, owner-write collections require the documents to contain an `ownerId` or `authorId` field
 *   that matches the user's UID. This is validated on `create` and enforced as immutable on `update`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId - The user ID to compare against.
     * @returns {boolean} - True if the user is signed in and the UIDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user's UID matches the ownerId in the resource data.
     *              Additionally, verifies that the document exists to prevent modifications to non-existent documents.
     * @param {string} userId - The user ID to compare against.
     * @returns {boolean} - True if the user is signed in, the UIDs match, and the document exists.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description User profile access control.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching {userId}.
     * @allow (get, update, delete) - Authenticated user with matching {userId}.
     * @deny (list) - Listing user profiles is not permitted.
     * @deny (create, update, delete) - Non-authenticated user.
     * @deny (create) - Authenticated user with non-matching {userId}.
     * @principle Enforces user ownership.
     */
    match /users/{userId} {
      // Allow the user to create their own profile if the userId matches their auth.uid.
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      // Allow the user to read, update, and delete their own profile.
      allow get, update, delete: if isExistingOwner(userId);
      // Disable listing all users.
      allow list: if false;
    }

    /**
     * @description Post access control.
     * @path /posts/{postId}
     * @allow (get, list) - Anyone can read all posts.
     * @allow (create) - Authenticated user creating a post with a matching authorId.
     * @allow (update, delete) - Authenticated user who is the author of the post.
     * @deny (create) - Authenticated user with non-matching authorId.
     * @principle Allows public read access with owner-only writes.
     */
    match /posts/{postId} {
      // Anyone can read posts
      allow get, list: if true;
      // Only the post author can create, update, and delete posts.
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.authorId);
    }

    /**
     * @description Digital clone access control (user-specific).
     * @path /users/{userId}/clones/{cloneId}
     * @allow (create) - Authenticated user with matching {userId}.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId}.
     * @deny (create, update, delete) - Non-authenticated user.
     * @deny (create) - Authenticated user with non-matching {userId}.
     * @principle Enforces user ownership.
     */
    match /users/{userId}/clones/{cloneId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get, list, update, delete: if isExistingOwner(userId);
    }

    /**
     * @description AI agent access control (user-specific).
     * @path /users/{userId}/agents/{agentId}
     * @allow (create) - Authenticated user with matching {userId}.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId}.
     * @deny (create, update, delete) - Non-authenticated user.
     * @deny (create) - Authenticated user with non-matching {userId}.
     * @principle Enforces user ownership.
     */
    match /users/{userId}/agents/{agentId} {
      allow create: if isOwner(userId);
      allow get, list, update, delete: if isExistingOwner(userId);
    }

    /**
     * @description Product access control.
     * @path /products/{productId}
     * @allow (get, list) - Anyone can read all products.
     * @allow (create) - Authenticated user creating a product with a matching ownerId.
     * @allow (update, delete) - Authenticated user who is the owner of the product.
     * @deny (create) - Authenticated user with non-matching ownerId.
     * @principle Allows public read access with owner-only writes.
     */
    match /products/{productId} {
      // Anyone can read products
      allow get, list: if true;
      // Only the product owner can create, update, and delete products.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Order access control.
     * @path /orders/{orderId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     */
    match /orders/{orderId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Payment access control.
     * @path /payments/{paymentId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     */
    match /payments/{paymentId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Plan access control.
     * @path /plans/{planId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update, delete: if false;
     */
    match /plans/{planId} {
      allow get, list: if true;
      allow create: if false;
      allow update, delete: if false;
    }

    /**
     * @description Call access control.
     * @path /calls/{callId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     */
    match /calls/{callId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Transaction access control.
     * @path /transactions/{txId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     */
    match /transactions/{txId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Admin Settings access control.
     * @path /adminSettings/{settingId}
     * @allow get, list: if false;
     * @allow create: if false;
     * @allow update, delete: if false;
     */
    match /adminSettings/{settingId} {
      allow get, list: if false;
      allow create: if false;
      allow update, delete: if false;
    }

        /**
     * @description Admin Agent access control.
     * @path /adminAgents/{agentId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     */
    match /adminAgents/{agentId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

  }
}