rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // UTILITY FUNCTIONS
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return isSignedIn() && (request.auth.token.role == 'admin' || request.auth.token.admin == true);
    }
    
    function isAgent() {
        return isSignedIn() && request.auth.token.role == 'agent';
    }
    
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // USER DATA & SUBCOLLECTIONS
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    
    // Users can read/write their own profile. Admins have full access.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow list: if false;
    }
    
    // Users can read/write their own clones and agents.
    match /users/{userId}/clones/{cloneId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    match /users/{userId}/agents/{agentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Users can read/write their own AI sessions.
    match /aiSessions/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Users can create AI requests and read their own.
    match /ai_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read: if isOwner(resource.data.uid);
      allow update: if false; // Only backend can update
    }
    
    // Users can read/write their own memory context.
    match /memory_context/{uid} {
      allow read, write: if isOwner(uid);
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // PUBLIC CONTENT RULES
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

    // Anyone can read posts. Signed-in users can create/update/delete their own.
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId);
    }
    
    // Anyone can read products. Only agents or admins can write.
    match /products/{productId} {
       allow read: if true;
       allow write: if isAgent() || isAdmin();
    }
    
    // Anyone can read plans. Only admins can write.
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Signed-in users can read admin agents. Only admins can write.
    match /adminAgents/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸ† TRUST & FINANCIALS
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

    // Users can read their own wallet. Only backend/admins can write.
    match /wallets/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin(); // Prevent client-side balance modification
    }

    // Users can read their own transactions. Only backend/admins can write.
    match /transactions/{txId} {
      allow read: if isAdmin() || (isOwner(resource.data.uid)) || (resource.data.agentId != null && isOwner(resource.data.agentId));
      allow write: if isAdmin();
    }
    
    // Buyer/Seller can read their own orders. Only admins can write.
    match /orders/{oid} {
      allow read: if isAdmin() || (isSignedIn() && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId));
      allow write: if isAdmin();
    }

    // Scores are public to signed-in users, but only writable by backend/admins.
    match /trustScores/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /buyerTrust/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /akiliPoints/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // SOCIAL & NOTIFICATIONS
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /notifications/{nid} {
      allow read, write: if isOwner(resource.data.userId) || isAdmin();
    }

    match /followers/{fid} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // SERVER-ONLY RULES (No Client Access)
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /vendor_metrics/{vendorName} {
      allow read, write: if false;
    }
    match /profit_tracking/{transactionId} {
      allow read, write: if false;
    }
    
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // GLOBAL DEFAULT (DENY)
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
