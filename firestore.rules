
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS
    match /users/{userId} {
      allow create, get, update, delete: if isOwner(userId);
      allow list: if false;
    }

    // CLONES / AGENTS (nested)
    match /users/{userId}/{subCollection=clones|agents}/{docId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    // POSTS (public)
    match /posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // PRODUCTS (public)
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // TRUST INFO (buyerTrust)
    match /buyerTrust/{buyerId} {
      allow get: if isOwner(buyerId);
      allow list, create, update, delete: if false;
    }

    // ADMIN AGENTS
    match /adminAgents/{agentId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create, update, delete: if false;
    }

    // PLANS / PAYMENTS / ORDERS / TRANSACTIONS
    match /plans/{planId} {
      allow get, list: if true;
    }
    match /payments/{paymentId} {
      allow get, list: if isSignedIn();
    }
    match /transactions/{txId} {
      allow get, list: if isSignedIn();
    }
    match /orders/{orderId} {
      allow get, list: if isSignedIn();
    }

    // Default Deny (safety)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /avatars/{userId}/{fileName} {
      allow read, write: if isOwner(userId);
    }
    match /voices/{userId}/{fileName} {
      allow read, write: if isOwner(userId);
    }
  }
}
