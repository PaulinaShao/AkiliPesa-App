
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == "blagridigital@gmail.com";
    }

    // --- ADMIN & CORE CONFIG ---
    match /adminSettings/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /adminAgents/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- USER DATA ---
    match /users/{userId} {
      allow get: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /users/{userId}/clones/{cloneId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/agents/{agentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- FINANCIAL DATA ---
    match /wallets/{walletId} {
      allow get, create, update: if request.auth != null && request.auth.uid == walletId;
      allow list: if false; // prevent listing all wallets
    }

    match /transactions/{txId} {
      allow get: if request.auth != null && resource.data.uid == request.auth.uid;
      allow list: if request.auth != null && request.query.where.size() > 0 && request.query.where[0][0] == "uid" && request.query.where[0][2] == request.auth.uid;
      allow create: if request.auth != null; // Allow create, will be secured by CF
      allow update, delete: if false;
    }
    
    match /commissions/{uid} {
      allow get, create, update: if request.auth != null && request.auth.uid == uid;
      allow list: if false;
    }
    
    match /escrow/{eid} {
      allow read, update: if request.auth != null && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
    }

    // --- CONTENT & E-COMMERCE ---
    match /posts/{pid} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.resource.data.authorId == request.auth.uid;
    }

    match /products/{pid} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
    
    match /orders/{orderId} {
        allow read, write: if request.auth != null && (request.resource.data.buyerId == request.auth.uid || request.resource.data.sellerId == request.auth.uid);
    }
    
    match /deliveryProofs/{proofId} {
        allow read, write: if request.auth != null;
    }
    
    match /refunds/{refundId} {
        allow read, write: if request.auth != null;
    }

    // --- OTHER ---
    match /calls/{callId} {
        allow read, write: if request.auth != null && request.resource.data.callerId == request.auth.uid;
    }
    
    match /aiSessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == sessionId;
    }

    // --- ADMIN GLOBAL OVERRIDE ---
    // This should be last to act as a fallback
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
