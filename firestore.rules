rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS
    match /users/{userId} {
      allow create, get, update, delete: if isOwner(userId);
      allow list: if false;
    }

    // CLONES (nested)
    match /users/{userId}/clones/{cloneId} {
      allow read, write: if isOwner(userId);
    }

    // AGENTS (nested)
    match /users/{userId}/agents/{agentId} {
      allow read, write: if isOwner(userId);
    }

    // POSTS (public)
    match /posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // PRODUCTS (public)
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // TRUST INFO (buyerTrust)
    match /buyerTrust/{buyerId} {
      allow get: if isOwner(buyerId);
      allow list, create, update, delete: if false;
    }

    // ADMIN AGENTS
    match /adminAgents/{agentId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // PLANS / PAYMENTS / ORDERS / TRANSACTIONS
    match /plans/{planId} {
      allow read: if true;
    }
    match /payments/{paymentId} {
      allow read: if isSignedIn();
    }
    match /transactions/{txId} {
      allow read: if isSignedIn();
    }
    match /orders/{orderId} {
      allow read: if isSignedIn();
    }
    
    // NOTIFICATIONS
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn() && isOwner(request.resource.data.uid);
    }
    
    // FOLLOWERS
    match /followers/{followId} {
        allow read, write: if isSignedIn();
    }
    
    // WALLETS
    match /wallets/{walletId} {
        allow read: if isOwner(walletId);
    }
    
    // AI SESSIONS
    match /aiSessions/{sessionId} {
        allow read, write: if isOwner(sessionId);
    }
  }
}