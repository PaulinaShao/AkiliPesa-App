rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────
    // UTILITY FUNCTIONS
    // ─────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.role == 'admin' || request.auth.token.admin == true);
    }

    function isAgent() {
      return isSignedIn() && request.auth.token.role == 'agent';
    }

    // ─────────────────────────────
    // USER PROFILES (Public Social Network Mode)
    // ─────────────────────────────

    match /users/{userId} {
      allow read, list: if true; // ✅ Public view + querying allowed
      allow write: if isOwner(userId) || isAdmin();
    }
    match /users/{userId}/clones/{cloneId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/agents/{agentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // ─────────────────────────────
    // AI SYSTEM
    // ─────────────────────────────

    match /aiSessions/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /ai_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read: if isSignedIn() && request.auth.uid == resource.data.uid;
      allow update: if false; // Backend-only result write
    }

    match /memory_context/{uid} {
      allow read, write: if isOwner(uid);
    }

    // ─────────────────────────────
    // PUBLIC CONTENT FEEDS
    // ─────────────────────────────

    match /posts/{postId} {
      allow get, list: if true; // ✅ FIX: feed now works
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId);
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAgent() || isAdmin();
    }

    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /adminAgents/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /agentPricing/{agentId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // ─────────────────────────────
    // FINANCIAL & EARNINGS SYSTEM
    // ─────────────────────────────

    match /wallets/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }

    match /transactions/{txId} {
      allow read: if isAdmin() || isOwner(resource.data.uid) || (resource.data.agentId != null && isOwner(resource.data.agentId));
      allow write: if isAdmin();
    }

    match /orders/{oid} {
      allow read: if isAdmin()
        || (isSignedIn() &&
          (request.auth.uid == resource.data.buyerId ||
           request.auth.uid == resource.data.sellerId));
      allow write: if isAdmin();
    }

    match /escrow/{escrowId} {
      allow read: if isAdmin()
        || (isSignedIn() &&
          (request.auth.uid == resource.data.buyerId ||
           request.auth.uid == resource.data.sellerId));
      allow write: if isAdmin(); // Backend releases funds only
    }

    match /withdrawalRequests/{reqId} {
      allow create: if isSignedIn() && request.resource.data.agentId == request.auth.uid;
      allow read: if isOwner(resource.data.agentId) || isAdmin();
      allow write: if isAdmin();
    }

    match /sales/{saleId} {
      allow read: if isOwner(resource.data.agentId) || isAdmin();
      allow write: if isAdmin();
    }

    match /commissions/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }

    match /referrals/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }

    match /akiliPoints/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }

    match /rewardCatalog/{rewardId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /rewardHistory/{id} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    // ─────────────────────────────
    // TRUST / VERIFICATION / FEEDBACK
    // ─────────────────────────────

    match /trustScores/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /buyerTrust/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /productVerification/{productId} {
      allow read: if isOwner(resource.data.sellerId) || isAdmin();
      allow write: if isAdmin();
    }

    match /deliveryProofs/{id} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    match /feedback/{id} {
      allow create: if isSignedIn();
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orderTracking/{trackId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /trustHistory/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /buyerHistory/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ─────────────────────────────
    // REAL-TIME & SOCIAL
    // ─────────────────────────────

    match /notifications/{nid} {
      allow read, write: if isOwner(resource.data.userId) || isAdmin();
    }

    match /followers/{fid} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /agentAvailability/{agentId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
    }

    match /chats/{channelId}/messages/{messageId} {
      allow read, write: if isSignedIn() && request.auth.uid in channelId.split('_');
    }
    
    match /callHistory/{callId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow write: if isAdmin(); // Only backend can create/update
    }

    match /callInvites/{userId} {
      allow read, write: if isOwner(userId);
    }

    // ─────────────────────────────
    // STRICT BACKEND-ONLY (NO CLIENT ACCESS)
    // ─────────────────────────────
    match /vendor_metrics/{vendorName} {
      allow read, write: if false;
    }

    match /profit_tracking/{transactionId} {
      allow read, write: if false;
    }

    match /revenueReports/{date} {
      allow read, write: if isAdmin();
    }

    match /agentStats/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }
  }
}
