rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // ğŸ” Helper functions
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ---------------------------
    // ğŸ‘¤ USERS collection
    // ---------------------------
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get, update, delete: if isOwner(userId);
      allow list: if false;
    }

    // ---------------------------
    // ğŸ¤– Clones & Agents (subcollections)
    // ---------------------------
    match /users/{userId}/{subCollection=clones|agents}/{docId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    // ---------------------------
    // ğŸ“° POSTS (public read)
    // ---------------------------
    match /posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // ğŸ› PRODUCTS (public read)
    // ---------------------------
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // ğŸ’ TRUST SCORE (buyerTrust)
    // ---------------------------
    match /buyerTrust/{buyerId} {
      allow get: if isOwner(buyerId);
      allow list, create, update, delete: if false;
    }

    // ---------------------------
    // ğŸ§© ADMIN AGENTS (fix 403)
    // ---------------------------
    match /adminAgents/{agentId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create, update, delete: if false;
    }

    // ---------------------------
    // ğŸ’³ Other public collections
    // ---------------------------
    match /plans/{planId} {
      allow get, list: if true;
    }
    match /payments/{paymentId} {
      allow get, list: if isSignedIn();
    }
    match /transactions/{txId} {
      allow get, list: if isSignedIn();
    }
    match /orders/{orderId} {
      allow get, list: if isSignedIn();
    }

    // ---------------------------
    // ğŸš« Deny everything else
    // ---------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
