rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────
    // UTILITY FUNCTIONS
    // ─────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        (request.auth.token.role == 'admin' || request.auth.token.admin == true);
    }

    function isAgent() {
      return isSignedIn() && request.auth.token.role == 'agent';
    }

    // ─────────────────────────────
    // USER & AGENT DATA
    // ─────────────────────────────
    match /users/{userId} {
      // Profiles are mostly public, but editable only by owner or admin
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    match /agentAvailability/{agentId} {
      allow read: if true;
      allow write: if isOwner(agentId) || isAdmin();
    }

    match /agentPricing/{agentId} {
      allow read: if true;
      allow write: if isOwner(agentId) || isAdmin();
    }

    // ─────────────────────────────
    // REVIEWS & BOOKINGS
    // ─────────────────────────────
    match /agentReviews/{agentId}/reviews/{reviewId} {
      allow read, list: if true;
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    match /agentBookings/{agentId}/requests/{requestId} {
      allow read: if isOwner(agentId) || isOwner(resource.data.userId);
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Agent/admin can update status, but cannot change userId
      allow update: if (isOwner(agentId) || isAdmin()) &&
        !("userId" in request.resource.data);
      allow delete: if isAdmin();
    }

    // ─────────────────────────────
    // REAL-TIME CALLING
    // ─────────────────────────────
    match /callRooms/{callId} {
      function isParticipant(uid) {
        return uid in resource.data.participants;
      }

      allow read: if isSignedIn() && isParticipant(request.auth.uid);
      allow create: if false; // backend only
      // UI may update some lightweight fields (e.g. mute, layout prefs) via a callable
      allow update: if isSignedIn();
      allow delete: if isOwner(resource.data.hostId) || isAdmin();
    }

    match /callInvites/{inviteId} {
      allow read, write: if isSignedIn();
    }

    // CALL SESSION SETUP (Agora/Zego Token + Join Data + Billing Summary)
    match /callSessions/{sessionId} {
      // Created/updated by backend Cloud Functions
      allow create, read, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    // Optional detailed logs if you add them later
    match /callLogs/{logId} {
      allow read: if isAdmin();
      allow write, delete: if false; // backend only
    }

    // ─────────────────────────────
    // POINTS & REWARDS
    // ─────────────────────────────
    match /akiliPoints/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Points are only updated via backend functions
      allow write: if false;
    }

    match /rewardHistory/{historyId} {
      allow read: if isSignedIn() &&
        request.auth.uid == resource.data.userId;
      allow write: if false; // backend only
    }

    // ─────────────────────────────
    // TRUST SCORES
    // ─────────────────────────────
    match /trustScores/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    match /buyerTrust/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isAdmin();
    }

    // ─────────────────────────────
    // FINANCIAL / WALLET & TRANSACTIONS
    // ─────────────────────────────
    match /wallets/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      // Wallet balances & plan credits are updated only by backend
      allow write: if false;
    }

    match /transactions/{txId} {
      // Users can see their own transactions where they're a participant
      allow read: if isAdmin() ||
        (isSignedIn() && request.auth.uid in resource.data.participants);
      // All transaction creation/updates are backend-only
      allow create, update, delete: if false;
    }

    match /subscriptions/{subId} {
      allow read: if isAdmin() ||
        (isSignedIn() && request.auth.uid == resource.data.uid);
      allow write: if false; // backend only
    }

    match /agentEarnings/{agentId} {
      allow read: if isOwner(agentId) || isAdmin();
      allow write: if false; // backend only
    }

    match /revenueReports/{reportId} {
      allow read: if isAdmin();
      allow write: if false; // backend only
    }

    match /payoutRequests/{payoutId} {
      // Agents can read their own requests; admin can read all
      allow read: if isAdmin() ||
        (isSignedIn() && request.auth.uid == resource.data.agentId);
      allow write: if false; // created/updated only by backend
    }

    match /escrow/{escrowId} {
      allow read: if isAdmin() ||
        (isSignedIn() &&
          (request.auth.uid == resource.data.buyerId ||
           request.auth.uid == resource.data.sellerId));
      allow write: if false;
    }

    match /topupRequests/{requestId} {
      // User can read their own topup request; admin can see all
      allow read: if isAdmin() ||
        (isSignedIn() && request.auth.uid == resource.data.uid);
      allow write: if false; // created by callable / backend only
    }

    // ─────────────────────────────
    // AI → REQUESTS & POSTS
    // ─────────────────────────────
    match /ai_requests/{requestId} {
      allow create: if isSignedIn() &&
        request.resource.data.uid == request.auth.uid;
      allow read: if isSignedIn() &&
        request.auth.uid == resource.data.uid;
    }

    match /posts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() &&
        request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId);
    }

    // ─────────────────────────────
    // NOTIFICATIONS (IN-APP)
    // ─────────────────────────────
    match /notifications/{nid} {
      // User can read and update their own notification (mark as read)
      allow read, update: if isSignedIn() &&
        request.auth.uid == resource.data.userId;
      // Notification docs are created / deleted by backend only
      allow create, delete: if false;
    }

    // ─────────────────────────────
    // DENY ANYTHING ELSE
    // ─────────────────────────────
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
