rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // üîê Helper functions
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ---------------------------
    // üë§ USERS collection
    // ---------------------------
    match /users/{userId} {
      allow get: if true;
      allow list: if true;
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // ---------------------------
    // ü§ñ Clones & Agents (subcollections)
    // ---------------------------
    match /users/{userId}/{subCollection=clones|agents}/{docId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    // ---------------------------
    // üì∞ POSTS (public read)
    // ---------------------------
    match /posts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // üõç PRODUCTS (public read)
    // ---------------------------
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------------------------
    // üíé TRUST SCORE (buyerTrust)
    // ---------------------------
    match /buyerTrust/{buyerId} {
      allow get: if isOwner(buyerId);
      allow list, create, update, delete: if false;
    }
    
    match /trustScores/{sellerId} {
      allow get: if isOwner(sellerId);
      allow list, create, update, delete: if false;
    }

    // ---------------------------
    // üß© ADMIN AGENTS (fix 403)
    // ---------------------------
    match /adminAgents/{agentId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if false;
    }
    
    match /followers/{followId} {
      allow get, list: if isSignedIn();
      allow create, delete: if isSignedIn();
    }
    match /notifications/{notifId} {
      allow get, list: if isOwner(resource.data.uid);
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.uid);
      allow delete: if false;
    }


    // ---------------------------
    // üí≥ Other public collections
    // ---------------------------
    match /plans/{planId} {
      allow get, list: if true;
    }
    match /payments/{paymentId} {
      allow get, list: if isSignedIn();
    }
    match /transactions/{txId} {
      allow list: if isSignedIn() && request.query.where[0][2] == request.auth.uid;
      allow get: if isSignedIn() && resource.data.uid == request.auth.uid;
    }
    match /orders/{orderId} {
      allow get, list: if isSignedIn();
    }
    
    match /wallets/{walletId} {
        allow get, list, create, update: if isOwner(walletId);
        allow delete: if false;
    }
    
    match /calls/{callId} {
        allow read, write: if isSignedIn();
    }
    
    match /aiSessions/{sessionId} {
      allow read, write: if isOwner(sessionId);
    }
  }
}
