rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸŒ GLOBAL UTILITIES
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        (request.auth.token.role == 'admin' || request.auth.token.admin == true);
    }

    function isAgent() {
      return isSignedIn() && request.auth.token.role == 'agent';
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸ‘¤ USERS & PROFILE SUBCOLLECTIONS
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow list: if false;
    }

    match /users/{userId}/clones/{cloneId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/agents/{agentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /aiSessions/{userId} {
      allow read, write: if isOwner(userId);
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸ“¢ PUBLIC CONTENT
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /posts/{postId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /products/{pid} {
      allow read: if true;
      allow write: if isAgent() || isAdmin();
    }

    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /adminAgents/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸ† TRUST & SCORES
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /trustScores/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /buyerTrust/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /akiliPoints/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸ’° USER DATA
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /wallets/{wid} {
      allow read: if isOwner(wid) || isAdmin();
      allow write: if isAdmin();
    }

    match /transactions/{tid} {
      allow read: if isAdmin() ||
        (isSignedIn() && request.auth.uid == resource.data.uid);
      allow write: if isAdmin();
    }

    match /orders/{oid} {
      allow read: if isAdmin() ||
        (isSignedIn() &&
          (request.auth.uid == resource.data.buyerId ||
           request.auth.uid == resource.data.sellerId));
      allow write: if isAdmin();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸ”” NOTIFICATIONS & FOLLOWERS
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /notifications/{nid} {
      allow read, write: if isSignedIn() &&
        (request.auth.uid == resource.data.userId || isAdmin());
    }

    match /followers/{fid} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // ğŸš« DEFAULT DENY
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
