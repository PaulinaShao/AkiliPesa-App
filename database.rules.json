{
  "rules": {
    ".read": false,
    ".write": false,

    "presence": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "callInvites": {
      "$inviteId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "typingStatus": {
      "$chatId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    }
  }
}
